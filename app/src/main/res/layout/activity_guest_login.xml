<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    tools:context=".Activity.GuestLoginActivity">


        <ImageView
            android:layout_centerHorizontal="true"
            android:id="@+id/imageView"
            android:src="@drawable/kuber_logo_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ProgressBar
            android:id="@+id/loadingGuestLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            ></ProgressBar>


    <RelativeLayout
        android:id="@+id/RelativeLayoutContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:layout_marginTop="30dp"
        android:paddingVertical="10dp">


        <TextView
            android:id="@+id/textView_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:textColor="@color/black"
            android:text="Guest Login"
            android:textSize="30dp"
            android:textStyle="bold" />


        <ScrollView
            android:id="@+id/layout_guest_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_header"
            android:overScrollMode="never"
            android:paddingHorizontal="16dp"
            android:scrollbars="none"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/name_edt"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:drawablePadding="8dp"
                    android:backgroundTint="@color/black"
                    android:ems="10"
                    android:hint="Name"
                    android:imeOptions="actionNext"
                    android:inputType="textCapWords"
                    android:paddingHorizontal="10dp"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/email_edt"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="10dp"
                    android:drawablePadding="8dp"
                    android:ems="10"
                    android:hint="Email"
                    android:backgroundTint="@color/black"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:paddingHorizontal="10dp"
                    android:textSize="14dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <EditText
                        android:id="@+id/mobile_edt"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:hint="Mobile No"
                        android:imeOptions="actionNext"
                        android:backgroundTint="@color/black"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:paddingLeft="10dp"
                        android:textSize="12dp" />

                    <EditText
                        android:id="@+id/nationality_edt"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:hint="Nationality"
                        android:backgroundTint="@color/black"
                        android:imeOptions="actionDone"
                        android:inputType="textCapWords"
                        android:paddingLeft="10dp"
                        android:textSize="12dp" />

                </LinearLayout>


                <TextView
                    android:id="@+id/service_dropdown_textview"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="-2dp"
                    android:padding="10dp"
                    android:text="Select the Service"
                    android:drawableEnd="@drawable/down_arrow_icon">

                </TextView>
                <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="1.1dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:background="@color/black"
                    android:layout_marginBottom="10dp"
                  />

                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/black"
                    android:text="Call Type"
                    android:textStyle="bold"
                    android:textSize="16dp" />

                <RadioGroup
                    android:id="@+id/call_type_radioGroup"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <RadioButton
                        android:id="@+id/videoradioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:layout_weight="0.5"
                        android:theme="@style/RadioButtonStyle"
                        android:text="Video"
                        android:textStyle="bold"/>

                    <RadioButton
                        android:id="@+id/audiooradioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:checked="false"
                        android:theme="@style/RadioButtonStyle"
                        android:text="Audio"
                        android:textStyle="bold"/>

                    <RadioButton
                        android:id="@+id/chatoradioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.33"
                        android:layout_marginRight="5dp"
                        android:checked="false"
                        android:theme="@style/RadioButtonStyle"
                        android:text="Chat"
                        android:textStyle="bold"/>
                </RadioGroup>


                <Button
                    android:id="@+id/login_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_color"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="15dp"
                    android:text="Login"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:textSize="16dp" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</LinearLayout>