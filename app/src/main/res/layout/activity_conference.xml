<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/white"
    tools:context=".Activity.ConferenceActivity">

    <ImageView
        android:id="@+id/agentimage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="20dp"
        android:layout_gravity="center|top"
        android:visibility="gone"
        android:src="@drawable/user_logo"/>
    <TextView
        android:id="@+id/agenttext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="230dp"
        android:layout_gravity="center|top"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="Agent 1"
        android:textSize="25dp"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#60000000"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/join_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminateTint="@color/primary_project_color"
            android:visibility="visible" />

        <TextView
            android:id="@+id/join_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Please Wait..."
            android:textColor="@color/white"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/holdimage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/hold_icon"
            android:visibility="gone"/>
    </LinearLayout>

<RelativeLayout
    android:id="@+id/RelativeLayoutContainerConference"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <FrameLayout
        android:id="@+id/join_params_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/llFunctionality"
        android:layout_centerInParent="true"
        android:layout_marginBottom="-1dp"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

    </FrameLayout>

    <ImageView
        android:id="@+id/imgvw_menu_plus"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_margin="5dp"
        android:background="@android:drawable/ic_menu_agenda"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/llFunctionality"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:background="@drawable/conference_bottom_shape"
        android:orientation="horizontal"
        android:weightSum="5"
        android:visibility="visible">

        <ImageView
            android:id="@+id/ivMicOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/microphone_on"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/ivMicOff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/microphone_off"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/ivCamOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/camera_on"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/ivCamOff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/camera_off"
            android:visibility="gone" />
        <ImageView
            android:id="@+id/endCall"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/call_end" />

<!--        <ImageView-->
<!--            android:id="@+id/ivCamRotateBack"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_gravity="center"-->
<!--            android:layout_weight="1"-->
<!--            android:src="@drawable/camera_rotate"-->
<!--            android:visibility="visible" />-->

<!--        <ImageView-->
<!--            android:id="@+id/ivCamRotateFront"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_gravity="center"-->
<!--            android:layout_weight="1"-->
<!--            android:src="@drawable/camera_rotate"-->
<!--            android:visibility="gone" />-->

        <ImageView
            android:id="@+id/ivSpeakeron"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/speaker"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/ivSpeakeroff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/speaker_mute"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_menu"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/menu_white"
            android:visibility="visible"/>


    </LinearLayout>
    </RelativeLayout>
</FrameLayout>