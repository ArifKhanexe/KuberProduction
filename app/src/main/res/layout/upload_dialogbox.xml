<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    android:background="@drawable/dialog_background"
    android:orientation="vertical">



    <TextView
        android:id="@+id/no_internet_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:text="Please Choose Your Type Of Files."
        android:textSize="14dp"/>

    <Button
        android:id="@+id/images_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:drawableStart="@drawable/upload_image_drawable"
        android:drawablePadding="5dp"
        android:background="@drawable/button_color"
        android:textColor="@color/white"
        android:text=" Images " />

    <Button
        android:id="@+id/document_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:drawableStart="@drawable/upload_document_drawable"
        android:drawablePadding="5dp"
        android:background="@drawable/grey_button_color"
        android:textColor="@color/white"
        android:text=" Document " />
    <Button
        android:id="@+id/close_button"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:padding="-10dp"
        android:background="@drawable/border_button_color"
        android:textColor="@color/primary_project_color"
        android:textSize="10dp"
        android:text="Close" />


</LinearLayout>