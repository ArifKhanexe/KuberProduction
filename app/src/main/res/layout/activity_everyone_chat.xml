<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.EveryoneChatActivity">

    <LinearLayout
        android:id="@+id/lineartitlebar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@color/secondary_project_color"
        android:weightSum="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:id="@+id/chat_back_img"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_weight="0.05"
        android:layout_marginStart="10dp"
        android:layout_gravity="center"
        android:src="@drawable/back_white" />

    <TextView
        android:id="@+id/chat_toolbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/twentyDp"
        android:layout_weight="0.95"
        android:layout_gravity="center"
        android:paddingStart="-40dp"
        android:gravity="center"
        android:text="Chat List"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="@dimen/twentyFiveSP" />
    </LinearLayout>

    <ListView
        android:id="@+id/lv_chat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:divider="@color/black"
        android:dividerHeight="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lineartitlebar" />

</androidx.constraintlayout.widget.ConstraintLayout>