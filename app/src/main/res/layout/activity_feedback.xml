<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.FeedbackActivity">


    <TextView
        android:id="@+id/texttest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="TextView"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp" />

    <RatingBar
        android:id="@+id/testratingBar"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textsatisfaction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:lines="4"
        android:maxLines="4"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:text="TextView" />

    <RatingBar
        android:id="@+id/satisfactionratingBar"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textquery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:text="TextView" />

    <RatingBar
        android:id="@+id/queryratingBar"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/Comment"
        android:layout_width="match_parent"
        android:layout_height="150sp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="10dp"
        android:background="@color/colorSignUpEditTextBorder"
        android:ems="10"
        android:gravity="top"
        android:hint="Type your feedback"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:paddingTop="10dp" />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="10dp"
      android:orientation="horizontal">

      <Button
          android:id="@+id/submitbutton"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_weight=".5"
          android:layout_margin="10dp"
          android:text="Submit"
          android:gravity="center"
          android:textSize="12dp" />

      <Button
          android:id="@+id/skipbutton"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight=".5"
          android:layout_margin="10dp"
          android:textSize="12dp"
          android:text="Skip"
          android:gravity="center"/>

  </LinearLayout>
</LinearLayout>