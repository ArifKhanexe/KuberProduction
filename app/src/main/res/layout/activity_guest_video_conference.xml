<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.GuestVideoConferenceActivity">

     <RelativeLayout
        android:id="@+id/conference_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

         <com.rank.kuber.VideoFrame.VideoFrameLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:id="@+id/videoFrame" />

         <LinearLayout
             android:id="@+id/btn_layout"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:gravity="bottom|center"
             android:orientation="vertical"
             android:paddingLeft="0dp"
             android:paddingTop="0dp"
             android:paddingRight="0dp"
             android:paddingBottom="0dp">

         <LinearLayout
             android:id="@+id/toolbarLayout"
             android:layout_width="match_parent"
             android:layout_height="60dp"
             android:gravity="center"
             android:orientation="horizontal">

             <TextView
                 android:id="@+id/timer_txt"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="@dimen/fiveDp"
                 android:layout_marginTop="@dimen/tenDp"
                 android:layout_marginRight="@dimen/tenDp"
                 android:layout_marginBottom="@dimen/tenDp"
                 android:gravity="left|center"
                 android:text="Duration"
                 android:textColor="@color/colorWhite" />

             <ToggleButton
                 android:id="@+id/connect"
                 android:layout_width="50dp"
                 android:layout_height="50dp"
                 android:layout_marginLeft="10dp"
                 android:layout_marginTop="0dp"
                 android:layout_marginRight="10dp"
                 android:alpha="0.9"
                 android:background="@drawable/call_end"
                 android:focusable="false"
                 android:focusableInTouchMode="false"
                 android:textOff=""
                 android:textOn="" />
             <ToggleButton
                 android:id="@+id/camera_switch"
                 android:layout_width="50dp"
                 android:layout_height="50dp"
                 android:layout_marginLeft="@dimen/thirtyDp"
                 android:layout_marginTop="0dp"
                 android:alpha="0.9"
                 android:background="@drawable/camera_switch"
                 android:focusable="false"
                 android:focusableInTouchMode="false"
                 android:textOff=""
                 android:textOn=""
                 android:visibility="gone" />

             <ToggleButton
                 android:id="@+id/camera_privacy"
                 android:layout_width="50dp"
                 android:layout_height="50dp"
                 android:layout_marginLeft="@dimen/thirtyDp"
                 android:layout_marginTop="0dp"
                 android:alpha="0.9"
                 android:background="@drawable/toggle_camera_privacy"
                 android:focusable="false"
                 android:focusableInTouchMode="false"
                 android:textOff=""
                 android:textOn=""
                 android:visibility="gone" />

             <ToggleButton
                 android:id="@+id/microphone_privacy"
                 android:layout_width="50dp"
                 android:layout_height="50dp"
                 android:layout_marginLeft="@dimen/thirtyDp"
                 android:layout_marginTop="0dp"
                 android:alpha="0.9"
                 android:background="@drawable/toggle_mic_privacy"
                 android:focusable="false"
                 android:focusableInTouchMode="false"
                 android:textOff=""
                 android:textOn=""
                 android:visibility="gone" />

             <ToggleButton
                 android:id="@+id/speaker_privacy"
                 android:layout_width="50dp"
                 android:layout_height="50dp"
                 android:layout_marginLeft="@dimen/thirtyDp"
                 android:layout_marginTop="0dp"
                 android:layout_marginRight="20dp"
                 android:background="@drawable/toggle_speaker_privacy"
                 android:focusable="false"
                 android:focusableInTouchMode="false"
                 android:textOff=""
                 android:textOn=""
                 android:visibility="gone" />

             <ImageView
                 android:id="@+id/iv_menuplus"
                 android:layout_width="@dimen/fiftyDp"
                 android:layout_height="@dimen/fiftyDp"
                 android:layout_marginLeft="0dp"
                 android:layout_marginRight="30dp"
                 android:background="@drawable/ic_menu_two" />
         </LinearLayout>

         <LinearLayout
             android:id="@+id/toolbarStatusLayout"
             android:layout_width="match_parent"
             android:layout_height="20dp"
             android:gravity="center"
             android:orientation="horizontal">

             <TextView
                 android:id="@+id/toolbarStatusFiller"
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:layout_weight="1"
                 android:gravity="center_horizontal|bottom" />

             <TextView
                 android:id="@+id/toolbarStatusText"
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:layout_weight="4"
                 android:gravity="center_horizontal|bottom"
                 android:maxLines="1"
                 android:paddingStart="5dp"
                 android:paddingEnd="2dp"
                 android:shadowColor="#0d0d0d"
                 android:shadowDx="-3.0"
                 android:shadowDy="-3.0"
                 android:shadowRadius="2.0"
                 android:text="Ready to Connect"
                 android:textColor="#f1f1f1" />


          </LinearLayout>
         </LinearLayout>
      </RelativeLayout>
    </RelativeLayout>